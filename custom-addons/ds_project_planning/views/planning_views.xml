<odoo>
    <record id="task_gantt_view" model="ir.ui.view">
        <field name="name">Tasks Gantt</field>
        <field name="model">project.task</field>
        <field name="priority">10</field>
        <field name="type">dhx_gantt</field>
        <field name="arch" type="xml">
            <dhx_gantt id_field="id" text="name" date_start="date_start" duration="planned_duration" links_serialized_json="links_serialized_json" link_model="project.depending.tasks" child_ids="child_ids" user_ids="user_ids" portal_user_names="portal_user_names" date_deadline="date_deadline" />
        </field>
    </record>

    <record id="open_planning_task_all_on_gantt" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">dhx_gantt</field>
        <field name="view_id" ref="ds_project_planning.task_gantt_view"/>
        <field name="domain">[('display_project_id', '=', active_id)]</field>
        <field name="context">{
            'pivot_row_groupby': ['user_ids'],
            'default_project_id': active_id,
            'show_project_update': True,
        }</field>
        <!-- <field name="search_view_id" ref="view_task_search_form"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks found. Let's create one!
            </p>
            <p>
                To get things done, use activities and status on tasks.<br/>
                Chat in real-time or by email to collaborate efficiently.
            </p>
        </field>
    </record>

    <record id="project_planning_view_kanban" model="ir.ui.view">
        <field name="name">project.planning.kanban</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="0">
                <field name="user_id" string="Project Manager"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form">
                            <a name="%(open_planning_task_all_on_gantt)d" type="action">

                                <div class="row">
                                    <div class="col-12">
                                        <strong>
                                            <field name="name" string="Project Name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <field name="partner_id" string="Contact"/>
                                    </div>
                                    <div class="col-4">
                                        <div class="oe_kanban_bottom_right float-right">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_tree_calendar_effort" model="ir.ui.view">
        <field name="name">Calendar Resource</field>
        <field name="model">planning.calendar.resource</field>
        <field name="arch" type="xml">
            <tree string="Calendar Resource Effort" create="0" delete="0" multi_edit="1" sample="1">
                <field name="project_id" />
                <field name="employee_id" widget="many2one_avatar" options="{'no_create': True}"/>
                <field name="start_date" />
                <field name="end_date" />
                <field name="duration" string="Duration (days)"/>
                <field name="calendar_effort" digits="[12,1]" string="Calendar Effort (MM)"/>
                <field name="effort_rate" digits="[12,1]" string="Effort Rate (%)"/>
                <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="note" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="view_form_calendar_effort" model="ir.ui.view">
        <field name="name">Calendar Resource Effort Form</field>
        <field name="model">planning.calendar.resource</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="width: 500px">
                        <h1>
                            <field name="employee_id" widget="many2one_avatar" class="o_text_overflow" placeholder="Member Name" options="{'no_create': True}"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="duration" />
                        <field name="calendar_effort" digits="[12,1]"/>
                        <label for="effort_rate"/>
                        <div class="o_row" name="effort_rate">
                            <field name="effort_rate" digits="[12,1]" nolabel="1"/>
                            <span> % </span>
                        </div>
                        <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <field name="note" string="Note" placeholder="Add a note..." colspan="2"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open the Calendar Effort list -->
    <record id="action_calendar_effort" model="ir.actions.act_window">
        <field name="name">Calendar Resource Effort</field>
        <field name="res_model">planning.calendar.resource</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ds_project_planning.view_tree_calendar_effort')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ds_project_planning.view_form_calendar_effort')}),
                         ]"/>
    </record>

    <!-- Search filter Planning Phases -->
    <record id="view_project_planning_phases_search_form" model="ir.ui.view">
        <field name="name">project.planning.phase.search.form</field>
        <field name="model">project.planning.phase</field>
        <field name="arch" type="xml">
            <search string="Search Project">
                <field name="project_id" string="Project"/>
                <field name="pm_user_id" string="Project Manager"/>
                <separator/>
                <filter string="My Projects" name="own_projects" domain="[('pm_user_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Project Manager" name="Manager" context="{'group_by': 'pm_user_id'}"/>
                    <filter string="Project" name="Manager" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Search filter Planning Milestone -->
    <record id="view_project_planning_milestone_search_form" model="ir.ui.view">
        <field name="name">project.planning.milestone.search.form</field>
        <field name="model">project.planning.milestone</field>
        <field name="arch" type="xml">
            <search string="Search Project">
                <field name="project_id" string="Project"/>
                <field name="pm_user_id" string="Project Manager"/>
                <separator/>
                <filter string="My Projects" name="own_projects" domain="[('pm_user_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Project Manager" name="Manager" context="{'group_by': 'pm_user_id'}"/>
                    <filter string="Project" name="Manager" context="{'group_by': 'project_id'}"/>
                    <filter string="Phase" name="Manager" context="{'group_by': 'phase_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="project_planning_phase" model="ir.actions.act_window">
        <field name="name">Phases</field>
        <field name="res_model">project.planning.phase</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_project_planning_phases_search_form"/>
        <field name="context">{'default_project_id': active_id}</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No phases found. Let's create one!
            </p>
            <p>
                Use phases to organize tasks inside a project.
            </p>
        </field>
    </record>

    <record id="project_planning_milestone_from_phase" model="ir.actions.act_window">
        <field name="name">Milestones</field>
        <field name="res_model">project.planning.milestone</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'default_project_id': active_id}</field> -->
        <field name="domain">[('phase_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No milestones found. Let's create one!
            </p>
            <p>
                Use milestones to organize tasks inside a project's phases.
            </p>
        </field>
    </record>

    <record id="project_planning_milestone_from_project" model="ir.actions.act_window">
        <field name="name">Milestones</field>
        <field name="res_model">project.planning.milestone</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'default_project_id': active_id}</field> -->
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No milestones found. Let's create one!
            </p>
            <p>
                Use milestones to organize tasks inside a project's phases.
            </p>
        </field>
    </record>

    <!-- Search filter Calendar Resources -->
    <record id="view_project_calendar_resource_search_form" model="ir.ui.view">
        <field name="name">project.calendar.resource.search.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <search string="Search Project">
                <field name="name" string="Project"/>
                <field name="user_id" string="Project Manager"/>
                <separator/>
                <filter string="My Projects" name="own_projects" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Project Manager" name="Manager" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_form_calendar_resource" model="ir.ui.view">
        <field name="name">Calendar Resource Form</field>
        <field name="model">project.project</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Calendar Resources" class="o_form_project_project" edit="1" delete="0" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button name="%(ds_project_planning.project_planning_phase)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-check-square-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_phase" readonly="1" nolabel="1" help="Total phases in the project"/>
                                </span>
                                <span class="o_stat_text">
                                    Phases
                                </span>
                            </div>
                        </button>
                        <button name="%(ds_project_planning.project_planning_milestone_from_project)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-check-square-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_milestone" readonly="1" nolabel="1" help="Total milestones in the project"/>
                                </span>
                                <span class="o_stat_text">
                                    Milestones
                                </span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="action" name="%(project.dblc_proj)d" attrs="{'invisible': [('task_count_with_subtasks', '=', 0)]}" icon="fa-tasks">
                            <field string="Tasks" name="task_count_with_subtasks" widget="statinfo"/>
                        </button>
                        <button name="%(action_calendar_effort)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-clock-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_calendar_effort" readonly="1" nolabel="1" help="Total calendar effort of project planning"/>
 MM
                                </span>
                                <span class="o_stat_text">
                                    Calendar Effort
                                </span>
                            </div>
                        </button>
                        <button name="%(action_calendar_effort)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-clock-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_estimate_effort" readonly="1" nolabel="1" help="Total estimate effort of project planning"/>
 MM
                                </span>
                                <span class="o_stat_text">
                                    Estimate Effort
                                </span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title" style="width: 800px">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="o_text_overflow" readonly="1" placeholder="Project Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" string="Project Manager" widget="many2one_avatar_user" readonly="1" domain="[('share', '=', False)]"/>
                            <field name="partner_id" widget="res_partner_many2one" readonly="1"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <label for="date_start" string="Dates"/>
                            <div name="dates" class="o_row">
                                <field name="date_start" widget="daterange" options='{"related_end_date": "date"}' readonly="1"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('date_start', '=', False), ('date', '=', False)]}"/>
                                <field name="date" widget="daterange" options='{"related_start_date": "date_start"}' readonly="1"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <label for="member_ids" style="min-width: 150px"/>
                    <field name="member_ids" widget="many2many_avatar_user" readonly="1" force_save="1"/>
                    <notebook>
                        <page string="Calendar Resources">
                            <field name="planning_calendar_resources" colspan="4" nolabel="1">
                                <tree string="Assign Members">
                                    <field name="employee_id" widget="many2one_avatar" options="{'no_create': True}"/>
                                    <field name="start_date" />
                                    <field name="end_date" />
                                    <field name="duration" string="Duration (days)"/>
                                    <field name="calendar_effort" digits="[12,1]" string="Calendar Effort (MM)"/>
                                    <field name="effort_rate" digits="[12,1]" string="Effort Rate (%)"/>
                                    <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <field name="note" optional="hide" />
                                </tree>
                                <form string="Assign Member">
                                    <sheet>
                                        <div class="oe_title" style="width: 500px">
                                            <h1>
                                                <field name="employee_id" widget="many2one_avatar" class="o_text_overflow" placeholder="Member Name" options="{'no_create': True}"/>
                                            </h1>
                                        </div>
                                        <group col="4">
                                            <field name="start_date" />
                                            <field name="end_date" />
                                            <field name="duration" />
                                            <field name="calendar_effort" digits="[12,1]"/>
                                            <label for="effort_rate"/>
                                            <div class="o_row" name="effort_rate">
                                                <field name="effort_rate" digits="[12,1]" nolabel="1"/>
                                                <span> % </span>
                                            </div>
                                            <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        </group>
                                        <field name="note" string="Note" placeholder="Add a note..." colspan="2"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="project.group_project_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_calendar_resource" model="ir.ui.view">
        <field name="name">Calendar Resource List</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <tree decoration-muted="active == False" string="Projects" create="0" delete="0" multi_edit="1" sample="1">
                <field name="sequence" optional="show" widget="handle"/>
                <field name="message_needaction" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="name" string="Project" class="font-weight-bold"/>
                <field name="partner_id" optional="hide" string="Customer"/>
                <field name="privacy_visibility" optional="hide"/>
                <field name="company_id" optional="show" groups="base.group_multi_company" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="analytic_account_id" optional="hide" groups="analytic.group_analytic_accounting"/>
                <field name="date_start" string="Start Date" widget="daterange" options="{'related_end_date': 'date'}"/>
                <field name="date" string="End Date" widget="daterange" options="{'related_start_date': 'date_start'}"/>
                <field name="total_calendar_effort" string="Calendar Effort (MM)"/>
                <field name="total_estimate_effort" string="Estimate Effort (MM)"/>
                <field name="user_id" optional="show" string="Project Manager" widget="many2one_avatar_user" options="{'no_open':True, 'no_create': True, 'no_create_edit': True}"/>
                <field name="last_update_color" invisible="1"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
                <field name="last_update_status" string="Status" optional="show" widget="status_with_color" options="{'color_field': 'last_update_color'}"/>
                <field name="stage_id" options="{'no_open': True}" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Action to open the Calendar Resource list -->
    <record id="action_calendar_resource" model="ir.actions.act_window">
        <field name="name">Calendar Resource</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_project_calendar_resource_search_form"/>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ds_project_planning.view_tree_calendar_resource')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ds_project_planning.view_form_calendar_resource')})
                         ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    No projects found. Let's create one to add calendar resources!
            </p>
            <p>
                    Projects regroup tasks on the same topic, and each has its dashboard.
            </p>
        </field>

    </record>

    <!-- Opening task when clicking on phase Tasks -->
    <record id="action_phase_tasks" model="ir.actions.act_window">
        <field name="res_model">project.task</field>
        <field name="name">Project's tasks</field>
        <field name="view_mode">tree,form,calendar,graph,kanban</field>
        <field name="domain">[('phase_id', '=', active_id)]</field>
        <!-- <field name="context">{'project_id': active_id}</field> -->
    </record>

    <!-- Planning Phases -->
    <record id="view_form_project_phase" model="ir.ui.view">
        <field name="name">Project Phase</field>
        <field name="model">project.planning.phase</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Compute Tasks" name="compute_tasks" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button name="%(ds_project_planning.project_planning_milestone_from_phase)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-check-square-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="count_milestone" readonly="1" nolabel="1" help="Total milestones in the phase"/>
                                </span>
                                <span class="o_stat_text">
                                    Milestones
                                </span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="action" name="%(ds_project_planning.action_phase_tasks)d" icon="fa-tasks">
                            <field string="Tasks" name="tasks_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title" style="width: 800px">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="o_text_overflow" placeholder="Phase Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name='sequence' invisible="1"/>
                        <field name='project_id' options="{'no_create': True}" readonly="context.get('default_project_id')"/>
                    </group>
                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="description" placeholder="Add a description..."/>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="project_tasks" colspan="4" nolabel="1" readonly="1" force_save="1">
                                <tree string="Tasks" multi_edit="1" sample="1" js_class="project_list">
                                    <field name="is_closed" invisible="1" />
                                    <field name="allow_subtasks" invisible="1" />
                                    <field name="sequence" invisible="1" readonly="1"/>
                                    <field name="name" widget="name_with_subtask_count"/>
                                    <field name="child_text" invisible="1"/>
                                    <field name="project_id" optional="show" readonly="1"/>
                                    <field name="milestone_id" optional="show" readonly="1"/>
                                    <field name="partner_id" optional="hide"/>
                                    <field name="parent_id" optional="hide" attrs="{'invisible': [('allow_subtasks', '=', False)]}" groups="base.group_no_one"/>
                                    <field name="user_ids" optional="show" widget="many2many_avatar_user" domain="[('active', '=', True)]"/>
                                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                                    <field name="date_deadline" optional="hide" widget="remaining_days" attrs="{'invisible': [('is_closed', '=', True)]}"/>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
                                    <field name="kanban_state" widget="selection" optional="hide" />
                                    <field name="stage_id" invisible="context.get('set_visible',False)" optional="show" readonly="not context.get('default_project_id')"/>
                                    <field name="recurrence_id" invisible="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="project.group_project_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_project_phase" model="ir.ui.view">
        <field name="name">Project Phases</field>
        <field name="model">project.planning.phase</field>
        <field name="arch" type="xml">
            <tree>
                <field name='sequence' widget='handle' />
                <field name="name" />
                <field name="project_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- Opening task when clicking on milestone Tasks -->
    <record id="action_milestone_tasks" model="ir.actions.act_window">
        <field name="res_model">project.task</field>
        <field name="name">Project's tasks</field>
        <field name="view_mode">tree,form,calendar,graph,kanban</field>
        <field name="domain">[('milestone_id', '=', active_id)]</field>
        <!-- <field name="context">{'project_id': active_id}</field> -->
    </record>

    <!-- Planning Milestone -->
    <record id="view_form_project_milestone" model="ir.ui.view">
        <field name="name">Project Milestone</field>
        <field name="model">project.planning.milestone</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Compute Tasks" name="compute_tasks" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button class="oe_stat_button" type="action" name="%(ds_project_planning.action_milestone_tasks)d" icon="fa-tasks">
                            <field string="Tasks" name="tasks_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title" style="width: 800px">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="o_text_overflow" placeholder="Milestone Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name='sequence' invisible="1"/>
                        <div class="oe_title" style="width: 800px">
                            <label for="project_id" style="font-weight: 700;"/>
                            <h2>
                                <field name='project_id' options="{'no_create': True}" readonly="context.get('default_project_id')"/>
                            </h2>
                        </div>
                        <group>
                            <field name='phase_id' domain="[('project_id', '=', project_id)]" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <label for="start_date_phase" string="Dates" attrs="{'invisible': [('phase_id', '=', False)]}"/>
                            <div name="dates" class="o_row" attrs="{'invisible': [('phase_id', '=', False)]}">
                                <field name="start_date_phase" widget="daterange" options='{"related_end_date": "end_date_phase"}' readonly="1"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" />
                                <field name="end_date_phase" widget="daterange" options='{"related_start_date": "start_date_phase"}' readonly="1"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="description" placeholder="Add a description..."/>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="project_tasks" colspan="4" nolabel="1" readonly="1" force_save="1">
                                <tree string="Tasks" multi_edit="1" sample="1" js_class="project_list">
                                    <field name="is_closed" invisible="1" />
                                    <field name="allow_subtasks" invisible="1" />
                                    <field name="sequence" invisible="1" readonly="1"/>
                                    <field name="name" widget="name_with_subtask_count"/>
                                    <field name="child_text" invisible="1"/>
                                    <field name="project_id" optional="show" readonly="1"/>
                                    <field name="phase_id" optional="show" readonly="1"/>
                                    <field name="partner_id" optional="hide"/>
                                    <field name="parent_id" optional="hide" attrs="{'invisible': [('allow_subtasks', '=', False)]}" groups="base.group_no_one"/>
                                    <field name="user_ids" optional="show" widget="many2many_avatar_user" domain="[('active', '=', True)]"/>
                                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                                    <field name="date_deadline" optional="hide" widget="remaining_days" attrs="{'invisible': [('is_closed', '=', True)]}"/>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
                                    <field name="kanban_state" widget="selection" optional="hide" />
                                    <field name="stage_id" invisible="context.get('set_visible',False)" optional="show" readonly="not context.get('default_project_id')"/>
                                    <field name="recurrence_id" invisible="1" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="project.group_project_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_project_milestone" model="ir.ui.view">
        <field name="name">Project Milestones</field>
        <field name="model">project.planning.milestone</field>
        <field name="arch" type="xml">
            <tree>
                <field name='sequence' widget='handle' />
                <field name="name" />
                <field name="project_id" />
                <field name="phase_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- Roles -->
    <record model="ir.ui.view" id="planning_roles_search_view">
        <field name="name">Roles</field>
        <field name="model">planning.roles</field>
        <field name="arch" type="xml">
            <search string="Member Role">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_form_planning_role" model="ir.ui.view">
        <field name="name">Roles</field>
        <field name="model">planning.roles</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_planning_role" model="ir.ui.view">
        <field name="name">Roles</field>
        <field name="model">planning.roles</field>
        <field name="arch" type="xml">
            <tree string="Roles" editable="top" sample="1">
                <field name="name" />
                <field name="color" widget="color_picker" optional="show"/>
            </tree>
        </field>
    </record>

</odoo>