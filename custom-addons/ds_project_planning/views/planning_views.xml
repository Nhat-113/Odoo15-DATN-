<odoo>
    <record id="project_planning_view_kanban" model="ir.ui.view">
        <field name="name">project.planning.kanban</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="0">
                <field name="user_id" string="Project Manager"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <field name="name" string="Project Name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <field name="partner_id" string="Contact"/>
                                </div>
                                <div class="col-4">
                                    <div class="oe_kanban_bottom_right float-right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_tree_calendar_effort" model="ir.ui.view">
        <field name="name">Calendar Resource</field>
        <field name="model">planning.calendar.resource</field>
        <field name="arch" type="xml">
            <tree string="Calendar Resource Effort" create="0" delete="0" multi_edit="1" sample="1">
                <field name="project_id" />
                <field name="employee_id" widget="many2one_avatar" options="{'no_create': True}"/>
                <field name="start_date" />
                <field name="end_date" />
                <field name="duration" string="Duration (days)"/>
                <field name="calendar_effort" digits="[12,1]" string="Calendar Effort (MM)"/>
                <field name="effort_rate" digits="[12,1]" string="Effort Rate (%)"/>
                <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="note" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="view_form_calendar_effort" model="ir.ui.view">
        <field name="name">Calendar Resource Effort Form</field>
        <field name="model">planning.calendar.resource</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="width: 500px">
                        <h1>
                            <field name="employee_id" widget="many2one_avatar" class="o_text_overflow" placeholder="Member Name" options="{'no_create': True}"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="duration" />
                        <field name="calendar_effort" digits="[12,1]"/>
                        <label for="effort_rate"/>
                        <div class="o_row" name="effort_rate">
                            <field name="effort_rate" digits="[12,1]" nolabel="1"/>
                            <span> % </span>
                        </div>
                        <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <field name="note" string="Note" placeholder="Add a note..." colspan="2"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open the Calendar Effort list -->
    <record id="action_calendar_effort" model="ir.actions.act_window">
        <field name="name">Calendar Resource Effort</field>
        <field name="res_model">planning.calendar.resource</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ds_project_planning.view_tree_calendar_effort')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ds_project_planning.view_form_calendar_effort')}),
                         ]"/>
    </record>

    <record id="view_form_calendar_resource" model="ir.ui.view">
        <field name="name">Calendar Resource Form</field>
        <field name="model">project.project</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Calendar Resources" class="o_form_project_project" edit="1" delete="0" create="0">
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button name="%(action_calendar_effort)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-clock-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_calendar_effort" readonly="1" nolabel="1" help="Total calendar effort of project planning"/>
 MM
                                </span>
                                <span class="o_stat_text">
                                    Calendar Effort
                                </span>
                            </div>
                        </button>
                        <button name="%(action_calendar_effort)d" class="oe_stat_button" style="width: 13.5%" type="action" icon="fa-clock-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_estimate_effort" readonly="1" nolabel="1" help="Total estimate effort of project planning"/>
 MM
                                </span>
                                <span class="o_stat_text">
                                    Estimate Effort
                                </span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title" style="width: 800px">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="o_text_overflow" readonly="1" placeholder="Project Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" string="Project Manager" widget="many2one_avatar_user" readonly="1" domain="[('share', '=', False)]"/>
                            <field name="partner_id" widget="res_partner_many2one" readonly="1"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <label for="date_start" string="Dates"/>
                            <div name="dates" class="o_row">
                                <field name="date_start" widget="daterange" options='{"related_end_date": "date"}' readonly="1"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('date_start', '=', False), ('date', '=', False)]}"/>
                                <field name="date" widget="daterange" options='{"related_start_date": "date_start"}' readonly="1"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <label for="member_ids" style="min-width: 150px"/>
                    <field name="member_ids" widget="many2many_avatar_user" edit="0"/>
                    <notebook>
                        <page string="Calendar Resources">
                            <field name="planning_calendar_resources" colspan="4" nolabel="1">
                                <tree string="Assign Members">
                                    <field name="employee_id" widget="many2one_avatar" options="{'no_create': True}"/>
                                    <field name="start_date" />
                                    <field name="end_date" />
                                    <field name="duration" string="Duration (days)"/>
                                    <field name="calendar_effort" digits="[12,1]" string="Calendar Effort (MM)"/>
                                    <field name="effort_rate" digits="[12,1]" string="Effort Rate (%)"/>
                                    <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <field name="note" optional="hide" />
                                </tree>
                                <form string="Assign Member">
                                    <sheet>
                                        <div class="oe_title" style="width: 500px">
                                            <h1>
                                                <field name="employee_id" widget="many2one_avatar" class="o_text_overflow" placeholder="Member Name" options="{'no_create': True}"/>
                                            </h1>
                                        </div>
                                        <group col="4">
                                            <field name="start_date" />
                                            <field name="end_date" />
                                            <field name="duration" />
                                            <field name="calendar_effort" digits="[12,1]"/>
                                            <label for="effort_rate"/>
                                            <div class="o_row" name="effort_rate">
                                                <field name="effort_rate" digits="[12,1]" nolabel="1"/>
                                                <span> % </span>
                                            </div>
                                            <field name="role_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        </group>
                                        <field name="note" string="Note" placeholder="Add a note..." colspan="2"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_calendar_resource" model="ir.ui.view">
        <field name="name">Calendar Resource List</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <tree decoration-muted="active == False" string="Projects" create="0" delete="0" multi_edit="1" sample="1">
                <field name="sequence" optional="show" widget="handle"/>
                <field name="message_needaction" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="name" string="Project" class="font-weight-bold"/>
                <field name="partner_id" optional="hide" string="Customer"/>
                <field name="privacy_visibility" optional="hide"/>
                <field name="company_id" optional="show" groups="base.group_multi_company" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="analytic_account_id" optional="hide" groups="analytic.group_analytic_accounting"/>
                <field name="date_start" string="Start Date" widget="daterange" options="{'related_end_date': 'date'}"/>
                <field name="date" string="End Date" widget="daterange" options="{'related_start_date': 'date_start'}"/>
                <field name="total_calendar_effort" string="Calendar Effort (MM)"/>
                <field name="total_estimate_effort" string="Estimate Effort (MM)"/>
                <field name="user_id" optional="show" string="Project Manager" widget="many2one_avatar_user" options="{'no_open':True, 'no_create': True, 'no_create_edit': True}"/>
                <field name="last_update_color" invisible="1"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
                <field name="last_update_status" string="Status" optional="show" widget="status_with_color" options="{'color_field': 'last_update_color'}"/>
                <field name="stage_id" options="{'no_open': True}" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Action to open the Calendar Resource list -->
    <record id="action_calendar_resource" model="ir.actions.act_window">
        <field name="name">Calendar Resource</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ds_project_planning.view_tree_calendar_resource')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ds_project_planning.view_form_calendar_resource')})
                         ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    No projects found. Let's create one to add calendar resources!
            </p>
            <p>
                    Projects regroup tasks on the same topic, and each has its dashboard.
            </p>
        </field>

    </record>

    <record id="view_form_project_phase" model="ir.ui.view">
        <field name="name">Project Phase Form</field>
        <field name="model">project.planning.phase</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <field name='sequence' />
                        <field name="name" />
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_project_phase" model="ir.ui.view">
        <field name="name">Project Phases</field>
        <field name="model">project.planning.phase</field>
        <field name="arch" type="xml">
            <tree>
                <field name='sequence' widget='handle' />
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- Roles -->
    <record model="ir.ui.view" id="planning_roles_search_view">
        <field name="name">Roles</field>
        <field name="model">planning.roles</field>
        <field name="arch" type="xml">
            <search string="Member Role">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_form_planning_role" model="ir.ui.view">
        <field name="name">Roles</field>
        <field name="model">planning.roles</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_planning_role" model="ir.ui.view">
        <field name="name">Roles</field>
        <field name="model">planning.roles</field>
        <field name="arch" type="xml">
            <tree string="Roles" editable="top" sample="1">
                <field name="name" />
                <field name="color" widget="color_picker" optional="show"/>
            </tree>
        </field>
    </record>

</odoo>