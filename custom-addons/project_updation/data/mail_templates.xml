<?xml version="1.0" ?>
<odoo>
    <data noupdate="0">
        <!-- Confirm CV -->
        <template id="warning_task_late">
            <p style="margin: 0px;">
                <span>Dear <t t-esc="object.user_id.name"/>,</span><br/>
                <span style="margin-top: 8px;">Task has ID <b><t t-esc="task"/></b> are delay. Please update progress of these tasks.</span>
                <br></br>
            </p>
            <p style="padding-top: 24px; padding-bottom: 16px;">
                <a t-att-href="access_link" t-att-data-oe-model="object._name" t-att-data-oe-id="object.id" style="background-color:#875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                        View <t t-esc="model_description or 'Project'"/>
                </a>
            </p>
        </template>

    </data>
</odoo>
