<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Message Wizard -->
    <record id="ds_send_email_payslips_message_wizard_form" model="ir.ui.view">
        <field name="name">ds_send_email_payslips.message.wizard.form</field>
        <field name="model">ds_send_email_payslips.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="message" width="200" readonly="True"/>
                <footer>
                    <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>