<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Sidebar filter  -->
    <record id="project_sidebar_filter" model="ir.ui.view">
        <field name="name">project.management.search</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>
                    <field name="user_pm" icon="fa-users" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_tree_project_management" model="ir.ui.view">
        <field name="name">Project Management List</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <tree string="Cost Management" create="0" delete="0" multi_edit="1" sample="1">
                <!-- <field name="sequence" widget="handle"/> -->
                <field name="project_id" string="Project" class="font-weight-bold"/>
                <field name="project_type_id"/>
                <field name="director"  widget="many2one_avatar_employee" optional="hide"/>
                <field name="user_pm" string="Project Manager" widget="many2one_avatar_user" options="{'no_open':True, 'no_create': True, 'no_create_edit': True}"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_create_edit': True}"  optional="hide"/>
                <field name="date_start" string="Start Date" widget="daterange" options="{'related_end_date': 'date'}"/>
                <field name="date_end" string="End Date" widget="daterange" options="{'related_start_date': 'date_start'}"/>
                <field name="status" string="Status" widget="status_with_color" options="{'color_field': 'last_update_color'}"/>
                <field name="count_members" sum="Total Members"/>
                <field name="total_salary" sum="Total Salary Cost"/>
                <field name="project_cost" sum="Total Project Cost"/>
                <field name="revenue" sum="Total Revenue"/>
                <field name="profit" sum="Total Profit"/>
                <field name="last_update_color" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <!-- <field name="bonus" /> -->
            </tree>
        </field>
    </record>

    <record id="view_form_project_management" model="ir.ui.view">
        <field name="name">Project Management Form</field>
        <field name="model">project.management</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Cost Managements" class="o_form_project_project" edit="0" delete="0" create="0">
                <sheet>
                    <div class="oe_title" style="width: 800px">
                        <label for="project_id" class="oe_edit_only"/>
                        <h1>
                            <field name="project_id" class="o_text_overflow" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_type_id"/>
                            <field name="user_pm" string="Project Manager" widget="many2one_avatar_user" readonly="1" domain="[('share', '=', False)]"/>
                            <field name="director" widget="many2one_avatar_employee" readonly="1"/>
                            <label for="date_start" string="Dates"/>
                            <div name="date_end" class="o_row">
                                <field name="date_start" widget="daterange" options='{"related_end_date": "date_end"}' readonly="1"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('date_start', '=', False), ('date_end', '=', False)]}"/>
                                <field name="date_end" widget="daterange" options='{"related_start_date": "date_start"}' readonly="1"/>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <!-- <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/> -->
                        </group>
                        <group>
                            <field name="revenue" readonly="1"/>
                            <!-- <field name="bonus" readonly="1"/> -->
                            <field name="total_salary" readonly="1"/>
                            <field name="project_cost" readonly="1"/>
                            <field name="profit" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="History Cost Management">
                            <field name="project_management_history">
                                <tree edit="0" delete="0" create="0">
                                    <field name="month_start"/>
                                    <field name="month_end"/>
                                    <field name="working_day" sum="Total Working day"/>
                                    <field name="revenue" sum="Total revenue"/>
                                    <field name="members" sum="Total members"/>
                                    <field name="total_salary" sum="Total salary"/>
                                    <field name="total_project_expense" sum="Total project expense"/>
                                    <field name="operation_cost" sum="Total operation cost" optional="show"/>
                                    <field name="profit" sum="Total profit"/>
                                    <!-- <field name="all_members" sum="Total all members"/> -->
                                    <field name="average_cost_company" sum="Total average cost company" optional="hide"/>
                                    <field name="average_cost_project" sum="Total average cost project" optional="hide"/>
                                </tree>
                               
                            </field>
                        </page>
                        <page string="Members Detail">
                            <field name="member_ids">
                                <tree>
                                    <field name="employee_id" widget="many2one_avatar" options="{'no_create': True}"/>
                                    <field name="job_id" />
                                    <field name="email" optional="hide"/>
                                    <field name="number_phone" optional="hide"/>
                                    <field name="start_date" />
                                    <field name="end_date" />
                                    <field name="member_type" />
                                    <field name="effort_rate" />
                                    <field name="role_ids" optional="hide"/>
                                    <!-- <field name="salary" sum="Total Salary Employees"/> -->
                                    
                                </tree>
                               
                            </field>
                        </page>
                        <page string="Project Cost Detail">
                            <field name="project_expense_management">
                                <tree  edit="0" delete="0" create="0">
                                    <field name="expense_date"/>
                                    <field name="name" />
                                    <field name="total_expenses" sum="Total expense"/>
                                    <field name="description"/>
                                    <field name="company_id" optional="hide"/>
                                    <field name="currency_id" optional="hide"/>
                                </tree>
                               
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
            </form>
        </field>
    </record>

    <record id="project_management_action" model="ir.actions.act_window">
        <field name="name">Cost Management</field>
        <field name="res_model">project.management</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="project_sidebar_filter"/>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ds_company_management.view_tree_project_management')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ds_company_management.view_form_project_management')}),
                         ]"/>
    </record>

</odoo>