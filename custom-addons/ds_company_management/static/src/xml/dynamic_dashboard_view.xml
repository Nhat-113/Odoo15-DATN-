<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="dynamic_bom_dashboard">
            <div class="bom_dashboard_template">
                <!-- <div id="deny-click" style="z-index: 10;
                                    height: 100%;
