<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_expense_management_view_tree" model="ir.ui.view">
        <field name="name">project.expense.management.tree</field>
        <field name="model">project.expense.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="expense_date"/>
                <field name="name"/>
                <field name="expense_vnd" sum="Total expense"/>
                <field name="description"/>
                <field name="project_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="currency_vnd" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="project_expense_management_view_form" model="ir.ui.view">
        <field name="name">project.expense.management.form</field>
        <field name="model">project.expense.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="expense_date"/>
                            <field name="name"/>
                            <field name="rounding_usd_input" attrs="{'required': [('get_currency_name', '=', 'USD')], 'invisible': [('get_currency_name', 'in', ['JPY', 'SGD'])]}"/>
                            <field name="rounding_jpy_input" attrs="{'required': [('get_currency_name', '=', 'JPY')], 'invisible': [('get_currency_name', 'in', ['USD', 'SGD'])]}"/>
                            <field name="rounding_sgd_input" attrs="{'required': [('get_currency_name', '=', 'SGD')], 'invisible': [('get_currency_name', 'in', ['JPY', 'USD'])]}"/>
                        </group>
                        <group name="group_right">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="project_id" attrs="{'readonly': [('company_id', '=', False)]}"/>
                            <field name="currency_id"/>
                            <field name="total_expenses"/>
                            <field name="expense_usd" attrs="{'invisible': [('get_currency_name', '!=', 'VND')]}"/>
                            <field name="expense_jpy" attrs="{'invisible': [('get_currency_name', '!=', 'VND')]}"/>
                            <field name="expense_sgd" attrs="{'invisible': [('get_currency_name', '!=', 'VND')]}"/>
                            <field name="expense_vnd" attrs="{'invisible': [('get_currency_name', '=', 'VND')]}"/>
                            <field name="currency_usd" invisible="1"/>
                            <field name="currency_jpy" invisible="1"/>
                            <field name="currency_sgd" invisible="1"/>
                            <field name="currency_vnd" invisible="1"/>
                            <field name="get_currency_name" invisible="1"/>
                        </group>

                        <!-- <div class="table_exchange_rate">
                            <h6 class="title_exchange_rate">Exchange rate</h6>
                            <div class="content_exchange_rate">
                                <div class="exchange_rate_box">
                                    <span class="exchange_rate_span">1 USD = </span>
                                    <field name="rounding_usd_input" nolabel="1"/>
                                    <span class="exchange_rate_span">VND</span>
                                </div>

                                <div class="exchange_rate_box">
                                    <span class="exchange_rate_span">1 JPY = </span>
                                    <field name="rounding_jpy_input" nolabel="1"/>
                                    <span class="exchange_rate_span">VND</span>
                                </div>
                            </div>
                        </div> -->
                        <!-- <div>
                            <field name="revenue_usd" attrs="{'invisible': ['|', ('rounding_usd_input', '=', 0.0), ('total_expenses', '=', 0.0)]}"/>
                            <field name="revenue_jpy" attrs="{'invisible': ['|', ('rounding_jpy_input', '=', 0.0), ('total_expenses', '=', 0.0)]}"/>
                            <field name="currency_usd" invisible="1"/>
                            <field name="currency_jpy" invisible="1"/>
                        </div> -->

                        <separator string="Description"/>
                        <field name="description" placeholder="Description ..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>