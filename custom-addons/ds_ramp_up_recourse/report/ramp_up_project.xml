<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ramp_up_view_search" model="ir.ui.view">
        <field name="name">ramp.up.view.search</field>
        <field name="model">planning.calendar.resource</field>
        <field name="arch" type="xml">
            <search string="Ramp Up Search">
                <field name="employee_id"/>
                <field name="project_id"/>
                <group expand="0" string="Group By">
                    <filter string="Start Date" name="groupby_start_date" context="{'group_by': 'start_date'}"/>
                    <filter string="End Date" name="groupby_end_date" context="{'group_by': 'end_date'}"/>
                    <filter string="Employee" name="groupby_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Project" name="groupby_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ramp_up_report_view_pivot" model="ir.ui.view">
        <field name="name">ramp.up.report.view.pivot</field>
        <field name="model">planning.calendar.resource</field>
        <field name="arch" type="xml">
            <pivot string="Ramp Up" disable_linking="0" default_order="effort_rate asc">
                <field name="employee_id" type="row"/>
                <field name="project_id" type="col"/>
                <field name="effort_rate" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="ramp_up_report_action" model="ir.actions.act_window">
        <field name="name">Resource Management</field>
        <field name="res_model">planning.calendar.resource</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="ramp_up_view_search"/>
        <field name="groups_id" eval="[(4, ref('group_task_score_admin'))]"/>
        <field name="context">{'group_by': ['employee_id']}</field>
    </record>
</odoo>
