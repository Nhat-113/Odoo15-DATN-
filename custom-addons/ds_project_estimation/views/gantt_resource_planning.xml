    <record id="view_gantt_resource_planning_tree" model="ir.ui.view">
        <field name="name">gantt.resource.planning.tree</field>
        <field name="model">gantt.resource.planning</field>
        <field name="arch" type="xml">
            <tree>
                <field name="estimation_id"/>
                <field name="job_position_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="value_man_month"/>
                <field name="links_serialized_json"/>
                <field name="planned_duration"/>
            </tree>
        </field>
    </record>
    
    <record id="action_view_gantt_resource_plan" model="ir.actions.act_window">
        <field name="name">Gantt Resource Planning</field>
        <field name="res_model">gantt.resource.planning</field>
        <field name="context">{}</field>
        <field name="domain">[('estimation_id', '=', active_id)]</field>
        <field name="view_mode">tree,form</field>
    </record>

