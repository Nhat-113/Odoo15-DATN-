<odoo>

    <template id="work_list_template" name="Work List">
        <div id="wrap" class="container">
            <h1>Works</h1>
            <t t-foreach="works" t-as="work">
                <div class="row">
                    <span t-field="work.estimator_ids" />
                    ,
                    <span t-field="work.reviewer_ids" />
                    ,
                    <span t-field="work.customer_ids" />
                    ,
                    <span t-field="work.expected_revenue" />
                    ,
                    <span t-field="work.deadline" />
                    ,
                    <span t-field="work.stage" />
                </div>
            </t>
        </div>
    </template>

    <template id="costrate_list_template" name="Cost Rate List">
        <div id="wrap" class="container">
            <h1>Cost Rate</h1>
            <t t-foreach="cost_rate" t-as="rate">
                <div class="row">
                    <span t-field="rate.role" />
                    ,
                    <span t-field="rate.description" />
                    ,
                    <span t-field="rate.cost" />
                </div>
            </t>
        </div>
    </template>

    <template id="activity_list_template" name="Activity List">
        <div id="wrap" class="container">
            <h1>Activities</h1>
            <t t-foreach="activities" t-as="activity">
                <div class="row">
                    <span t-field="activity.activities" />
                    ,
                    <span t-field="activity.description" />
                </div>
            </t>
        </div>
    </template>

</odoo>