        <field name="percent">0</field>
    </record>

    <record id="act_structure_base" model="config.activity.structure">
        <field name="name">Base for new structures</field>
        <field eval="[(6, 0, [ref('act_prep'), ref('act_req'), ref('act_des'), 
                ref('act_implement'), ref('act_review'), ref('act_test'), ref('act_trans'), 
                ref('act_build'), ref('act_risk'), ref('act_accept'), ref('act_warranty'),
                ref('act_pm')])]" name="rule_ids" />
    </record>

