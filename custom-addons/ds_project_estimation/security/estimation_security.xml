<odoo>
    <data>
        <!-- Estimation User Group -->
        <record id="estimation_group_user" model="res.groups">
            <field name="name">Estimation</field>
            <field name="category_id" ref="base.module_category_services_estimation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>

    <!-- Estimation Manager Group -->
    <record id="estimation_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_services_estimation"/>
        <field name="implied_ids" eval="[(4, ref('estimation_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    
</odoo>